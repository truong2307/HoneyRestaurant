@model IEnumerable<Honey.Web.Models.Dto.ProductDto>

<br />
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-info">Product List</h1>
        </div>
        <div class=" col text-end pt-1">
            <a asp-action="ProductCreate" class=" btn btn-outline-info"><i class="fas fa-plus"></i>Create New Product</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in @Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Category.Name</td>
                    <td>@product.Price.ToString()</td>
                    <td>
                        <a asp-action="ProductEdit" class="btn btn-success" asp-route-productId="@product.ProductId"> 
                        <i class="fas fa-edit"></i>
                    </a>
                        <a asp-action="ProductDelete" class="btn btn-danger" asp-route-productId="@product.ProductId">
                        <i class="fas fa-trash"></i>
                    </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
